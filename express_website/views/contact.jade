extends layout

block content
    .container
        form.style-h1(method='post', action='contact/send')
            h3 Contact
            .form-group
                label Name
                input.form-control(type="text", name='name', placeholder='Enter Name')
            .form-group
                label Email
                input.form-control(type='email', name='email', placeholder='Enter email')
            .form-group
                label Message
                textarea.form-control(name='message', placeholder='Enter message...')
            button.btn.btn-danger(type='submit') Submit